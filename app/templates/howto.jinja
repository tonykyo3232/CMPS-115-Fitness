{% extends "layout.html" %}
{% block css %}
body
{
  background-image: linear-gradient( rgba(0,0,0,0.7), rgba(0,0,0,0.2) ),url(/static/image/wallpaper10.jpg);
  background-size: 100% 100%;
}
{% endblock %}
{% block content %}
<center><h2 style = "color:white">How-To/Tutorials</h2></center>


<!-- Start of CAROUSEL Section -->
<div class = "form-group row">
  <div class = "col">
    <div id="carouselControl" class="carousel slide" data-ride="carousel" data-interval="5000">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="static/image/Squats.jpg" alt="First slide">
          <center> <p class style = "color:white">Squats</p> </center>
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="static/image/Bench-Press.jpg" alt="Second slide">
          <center> <p class style = "color:white">Bench Press</p> </center>
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="static/image/Con-Deadlift.jpg" alt="Third slide">
          <center><p class style = "color:white">Conventional Deadlift</p> </center>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselControl" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselControl" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div> <!-- End of CAROUSEL Section -->
  </div>
  <!-- 2 start-->
    <div class = "col">
    <div id="carouselControls2" class="carousel slide" data-ride="carousel" data-interval="5000">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="static/image/Double-Unders.jpg" alt="First slide">
          <center><p class style = "color:white">Double Unders</p></center>
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="static/image/Kettlebell-Swings.jpg" alt="Second slide">
          <center><p class style = "color:white">Kettlebell Swings</p></center>
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="static/image/Front-Squat.jpg" alt="Third slide">
          <center><p class style = "color:white">Front Squat</p></center>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselControls2" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselControls2" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <!-- End of CAROUSEL Section -->
  </div>
  <!-- 2  ends-->

  <!-- 3 start-->
  <div class = "col">
    <div id="carouselControls" class="carousel slide" data-ride="carousel" data-interval="5000">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="static/image/Skull-Crushers.jpg" alt="First slide">
          <center><p class style = "color:white">Skull Crushers</p> </center>
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="static/image/Sumo_Deadlifts.jpg" alt="Second slide">
          <center><p class style = "color:white">Sumo Deadlifts</p> </center>
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="static/image/Push-Ups.jpg" alt="Third slide" style="max-width: 900px">
          <center><p class style = "color:white">Push Up</p> </center>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <!-- End of CAROUSEL Section -->
  </div>
  <!-- 3  ends-->
</div>
  
